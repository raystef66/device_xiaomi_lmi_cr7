<resources>
    <!-- Full screen aspect ratio -->
    <bool name="config_haveHigherAspectRatioScreen">true</bool>

    <!-- Gestures' key codes. If the gesture is not supported set it to 0. -->
    <integer name="config_doubleTapKeyCode">354</integer>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_enableSmartPixels">true</bool>

    <!-- Show a custom view for FOD -->
    <bool name="config_needCustomFODView">true</bool>

    <!-- Use default display mode -->
    <integer name="config_defaultLiveDisplayMode">0</integer>

    <!-- Flag specifying whether pocked mode is available on device -->
    <bool name="config_pocketModeSupported">true</bool>

    <!-- Screen off FOD -->
    <bool name="config_supportScreenOffFod">true</bool>

    <!-- Enable face auth only when swiping security view -->
    <bool name="config_faceAuthOnlyOnSecurityView">true</bool>

    <!-- Smart charging -->
    <bool name="config_smartChargingAvailable">true</bool>
    <string name="config_smartChargingSysfsNode" translatable="false">/sys/class/power_supply/battery/input_suspend</string>
    <string name="config_smartChargingSuspendValue" translatable="false">1</string>
    <string name="config_smartChargingResumeValue" translatable="false">0</string>

</resources>
